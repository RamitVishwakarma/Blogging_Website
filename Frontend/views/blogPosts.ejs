<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=post.title%></title>
    <link rel="stylesheet" href="/styles.css" />

    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;1,300;1,400&display=swap"
      rel="stylesheet" />
    <!-- Favicon -->
    <link
      rel="icon"
      href="https://res.cloudinary.com/dhkxbgwmt/image/upload/v1702112459/favicon_ar5nr1.svg" />
  </head>

  <body class="hidescrollbar">
    <!-- Nav Start -->
    <div class="nav">
      <div class="img">
        <a href="/"
          ><img
            src="https://res.cloudinary.com/dhkxbgwmt/image/upload/v1702112459/Logo_czunhf.svg"
            alt="Logo"
            style="width: 250px; height: 10vh" />
        </a>
      </div>
      <!-- Nav End -->
      <div class="anchor-container">
        <div class="anchors"><a href="/">Home</a></div>
        <div class="anchors"><a href="/about">About</a></div>
        <div class="anchors"><a href="/contact">Contact</a></div>
      </div>
    </div>
    <!-- Nav End -->
    <!-- Post Content Start -->
    <div class="post-container">
      <div class="post-title">
        <%=post.title%>
        <div class="author">@<%=post.author%></div>
      </div>
      <div class="content">
        <div class="post-desc"><%=post.content.para1%></div>
      </div>
      <div class="post-image">
        <img src="<%=post.image%>" alt="img" />
      </div>
      <div class="content">
        <div class="post-desc"><%=post.content.para2%></div>
      </div>
      <div class="content">
        <div class="post-desc"><%=post.content.para3%></div>
      </div>
    </div>
  </body>
</html>
